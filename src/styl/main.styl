body
  margin: 0
  background: rgb(245, 245, 250)
  font-size: 16px;
  color: #555;
  // font-family: 'Open Sans'

.container
  max-width: 820px

h1
  text-shadow: 2px 2px 2px #eee

.logo
  border: none
  float: left
  width: 130px
  margin-right: 20px

// profile pic and text
.feature
  float: right
  width: 191px
  padding-left: 20px
  padding-top: 20px

// main content areas
.section
  padding: 0 0 10px
  display: none
  p
    line-height: 1.4
  li
    padding-bottom: 4px

// only section visible on load
#home
  display: block

.submenu
  float: right
  width: 200px

footer p
  font-size: 0.7em

@media print
  .menu
    display: none

.nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover {
  background-color: rgba(34, 134, 209, 0.86);
}
