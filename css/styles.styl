@import '_settings'

normalize()
base()

.container
  max-width: 820px
  margin: 0 auto

body
  margin: 0
  background: rgb(245, 245, 250)

// blue stripe at absolute top
.stripe
  display: none
  // position: fixed
  // top: 0
  // left: 0
  // height: 4px
  // background: #0095e3
  // width: 100%

// header contains logo, text, tagline, menu
header
  // position: fixed
  // top: 4px
  // background: white
  // padding: 20px 0 0

  // background: #2A89CD
  width: 100%
  padding: 0 0 20px

  // h1
  //   color: #282827

  h2
    // color: #282827
    width: 70%
    margin-left: 140px

    margin-top: 0
    margin-bottom: 0

h1
  text-shadow: 2px 2px 2px #d1d1d1

.logo
  border: none
  float: left
  width: 130px
  margin-right: 20px

.menu
  .btn
    margin-right: 2px
    font-size: 12px
  .btn.active
    // todo: this is all a copy pasta hack because I couldn't figure out roots darken() etc.
    -webkit-box-shadow: inset 0 1px 5px rgba(0,124,189,0.6)
    -moz-box-shadow: inset 0 1px 5px rgba(0,124,189,0.6)
    -o-box-shadow: inset 0 1px 5px rgba(0,124,189,0.6)
    -ms-box-shadow: inset 0 1px 5px rgba(0,124,189,0.6)
    box-shadow: inset 0 1px 5px rgba(0,124,189,0.6)
    text-shadow: 0 -1px 1px rgba(0,0,0,0.2)
    border-color: #0088cf
    background-position: 0 -9.945px

// makes it looks like content "fades" up under the header instead of just disappearing abruptly
.fade
  height: 30px
  position: fixed
  top: 220px
  width: 100%
  background: linear-gradient(top, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0))

// profile pic and text
.feature
  float: right
  width: 191px
  padding-left: 20px
  padding-top: 20px

.subtle-border
  border: 1px solid #DDD

// main content areas
.section
  // padding: 225px 0 50px
  padding: 0 0 10px
  display: none
  p
    line-height: 1.4
  li
    padding-bottom: 4px

// only section visible on load
#home
  display: block


.submenu
  float: right
  width: 200px

.btn
  button(color = blue, size = 'medium')

footer p
  font-size: 0.7em

.no-cssgradients
  .btn
    background: blue
    color: white

@media print
  .menu
    display: none
